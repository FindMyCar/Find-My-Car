<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FirstActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Park Here"
        android:id="@+id/btn1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txt1"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="#ff1222"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minHeight="40dp"
        android:minWidth="300dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track My Car"
        android:id="@+id/btn2"
        android:onClick="parkHere"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btn1"
        android:layout_marginBottom="97dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txt2"
        android:minHeight="150dp"
        android:minWidth="300dp"
        android:layout_below="@+id/btn1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
